<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">

    <form method="post" action="/update-profile" enctype="multipart/form-data" class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Change profile image</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <div class="px-4   modal-body d-flex justify-content-between align-items-center">
        <label class="btn btn-secondary" for="inputFile">
          <i class="bi bi-plus"></i>

          Upload img</label>
        <input name="avatar" style="display: none;" id="inputFile" type="file">

        <img id="profileImage" style="border-radius: 50%;" src="<%= user.profileImage?user.profileImage:"../img/avatar.png" %>" alt="" width="150" height="150">
      </div>


      <div class="modal-footer">
        <button type="button" class="btn btn-danger mira_231126_111215_916" data-bs-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary mira_231126_111159_524">Save changes</button>
      </div>
    </form>
  </div>
</div>
<div class="b-example-divider b-example-vr"></div>

<%- include('../../getid.ejs') %>

<script>
  inputFile.addEventListener("change", (eo) => {
    profileImage.src = URL.createObjectURL(eo.target.files[0])
  })
</script>